pipeline {
    agent any

    options {
        timestamps()
        disableConcurrentBuilds()
    }

    parameters {
        choice(
            name: 'ENVIRONMENT',
            choices: ['dev', 'test'],
            description: 'Target environment'
        )
    }

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    def inventory = "inventory/${params.ENVIRONMENT}.ini"
                    def playbook = "playbooks/mysql_check.yml"

                    echo "Environment : ${params.ENVIRONMENT}"
                    echo "Inventory   : ${inventory}"
                    echo "Playbook    : ${playbook}"

                    sh """
                        ansible-playbook \
                          -i ${inventory} \
                          ${playbook}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ MySQL installed and running successfully"
        }

        failure {
            echo "❌ MySQL install or health check failed"
        }

        always {
            cleanWs()
        }
    }
}
